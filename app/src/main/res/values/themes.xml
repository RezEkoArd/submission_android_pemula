<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SubmissionAndroidPemula" parent="Theme.Material3.DayNight">
        <!-- Primary Brand Color. -->
         <item name="colorPrimary">@color/lavender</item>
         <item name="colorPrimaryVariant">@color/lavender</item>
         <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Brand Color. -->
         <item name="colorSecondary">@color/teal_200</item>
         <item name="colorSecondaryVariant">@color/teal_700</item>
         <item name="colorOnSecondary">@color/white</item>

        <!-- ActionBar Style    -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Status Bar Color. -->
        <item name="android:statusBarColor">@color/lavender</item>
    </style>

    <!--  ActionBar Style-->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/lavender</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar Title Text style -->
    <style name="MyActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="roundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

<!-- Setup SplashScreen-->

    <style name="Theme.SubmissionAndroidPemula" parent="Base.Theme.SubmissionAndroidPemula" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/dish</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Base.Theme.SubmissionAndroidPemula</item>
    </style>
</resources>